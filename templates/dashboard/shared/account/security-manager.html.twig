{% extends "base.html.twig" %}

{% set pagetitle = 'Login & security'|trans %}
{% block title pagetitle %}

{% block body %}

	<section class="py-5">
		<div class="container">
			<ol class="breadcrumb ps-0 justify-content-start">
				<li class="breadcrumb-item">
					<a href="{{ path('home') }}">{{'Home'|trans}}</a>
				</li>
				<li class="breadcrumb-item">
					<a href="{{ path('dashboard_account_index') }}">{{ 'My account'|trans }}</a>
				</li>
				<li class="breadcrumb-item active">{{pagetitle}}</li>
			</ol>
			<h1 class="hero-heading mb-0">{{pagetitle}}</h1>
			<p class="text-muted mb-5">{{ 'Manage your Login & security and settings here.'|trans }}</p>
			<div class="row">
				<div class="col-lg-7 mb-5 mb-lg-0">
					<div class="text-block">
						<div class="row mb-3">
							<div class="col-sm-8">
								<h6>{{ 'Password'|trans }}</h6>
								<p class="text-sm text-muted">{{ 'Last update'|trans }} {{ user.updatedAt | ago() }}</p>
							</div>
							<div class="col-sm-3 text-end">
								<button class="btn btn-link ps-0 text-primary collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#password" aria-expanded="false" aria-controls="password">{{ 'Update'|trans }}</button>
							</div>
						</div>
						<div class="collapse" id="password">
							{{ form_start(formUpdatePassword, {attr: {novalidate: 'novalidate'}}) }}
								{{ form_widget(formUpdatePassword._token) }}
								{{ form_errors(formUpdatePassword) }}
								<div class="row pt-4">
									{{ include("dashboard/shared/partials/_change-password.html.twig", {formUpdatePassword: formUpdatePassword}) }}
								</div>
								<button type="submit" name="action" value="plainPassword" class="btn btn-outline-primary">{{ 'Save'|trans }}</button>
							{{ form_end(formUpdatePassword, {'render_rest': false}) }}
						</div>
					</div>
					<div class="text-block">
						<h3 class="mb-4">{{ 'Social accounts'|trans}}</h3>
						<div class="row">
							<div class="col-sm-8">
								<h6>{{ 'Facebook'|trans}}</h6>
								<p class="text-sm text-muted">{{ 'Not connected'|trans}}</p>
							</div>
							<div class="col text-end">
								<a class="btn btn-link text-primary ps-0" href="#">{{ 'Connect'|trans}}</a>
							</div>
						</div>
						<div class="row">
							<div class="col-sm-8">
								<h6>{{ 'Google'|trans}}</h6>
								<p class="text-sm">{{ 'Connected'|trans}}</p>
							</div>
							<div class="col text-end">
								<a class="btn btn-link text-primary ps-0" href="#">{{ 'Disconnect'|trans}}</a>
							</div>
						</div>
					</div>
					<div class="text-block">
						<h3 class="mb-4">{{ 'Device history'|trans }}</h3>
						<div class="d-flex">
							<div class="icon-rounded bg-secondary-light flex-shrink-0">
								<svg class="svg-icon text-secondary w-2rem h-2rem">
									<use xlink:href="#imac-screen-1"></use>
								</svg>
							</div>
							<div class="pt-2 ms-3">
								<strong>Windows 11</strong>· Chrome
								<div class="badge badge-secondary-light text-uppercase">{{ 'Current  Session'|trans }}</div>
								<p class="text-sm text-muted">Ostrava, Moravskoslezsky kraj · April 6, 2020 at 01:51pm</p>
								<a class="btn btn-link text-primary ps-0" href="#">Log out device</a>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-8 col-lg-4 ms-lg-auto">
					<div class="card border-0 shadow">
						<div class="card-header bg-primary-light py-4 border-0">
							<div class="d-flex align-items-center">
								<div>
									<h4 class="h6 subtitle text-sm text-primary">{{ "Let's make your account more secure"|trans }}</h4>
								</div>
								<svg class="svg-icon svg-icon-light w-3rem h-3rem ms-3 text-primary flex-shrink-0">
									<use xlink:href="#shield-security-1"></use>
								</svg>
							</div>
						</div>
						<div class="card-body p-4">
							<h6 class="card-text">{{ 'Your account security:'|trans }}</h6>
							<p class="card-text mb-4">
								<span class="badge badge-info-light">{{ 'Medium'|trans }}</span>
							</p>
							<p class="text-muted card-text">{{ "We’re always working on ways to increase safety in our community."|trans }}</p>
							<p class="text-muted card-text">{{ "That’s why we look at every account to make sure it’s as secure as possible."|trans }}</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}
