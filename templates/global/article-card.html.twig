{% set runtimeConfig = {"thumbnail": {"size": thumbnailsize } } %}
<div class="col-lg-4 col-sm-6 mb-4 hover-animate">
	<div class="card shadow border-0 h-100">
		<a href="{{ path('blog_show', { slug : article.slug }) }}">
			<img 
				class="img-fluid card-img-top" 
				src="{{ article.imageName ? asset(article.getImagePath | imagine_filter('thumbnail', runtimeConfig)) : article.getImagePlaceholder }}" 
				alt="{{ article.title }}"
			>
		</a>
		<div class="card-body">
			{% include "global/article-categories.html.twig" with {
				categories: article.categories
			} only %}
			<h5 class="my-2">
				<a class="text-dark" href="{{ path('blog_show', { slug : article.slug }) }}">
					{{ article.title }}
				</a>
			</h5>
			<p class="text-gray-500 text-sm my-3">
				<i class="far fa-clock me-2"></i>{{ article.publishedAt | ago() }}
			</p>
			<p class="my-2 text-muted text-sm">{{ article.content | html_markdown_excerpt(160) }}</p>
			<a class="btn btn-link ps-0" href="{{ path('blog_show', { slug : article.slug }) }}">
				{{ 'Read more'|trans }}<i class="fa fa-long-arrow-alt-right ms-2"></i>
			</a>
		</div>
	</div>
</div>
