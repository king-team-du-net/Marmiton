{% if errors|length > 0 %}
    <div class="d-flex alert alert-danger alert-icon" role="alert">
        {% for error in errors %}
            <i class="fas fa-exclamation-circle fs-xl pe-1 me-2"></i>
            <div>{{ error.message }}</div>
            {% if not loop.last %}
                <br/>
            {% endif %}
        {% endfor %}
    </div>
{% endif %}
