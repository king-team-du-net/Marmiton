{% extends 'email.html.twig' %}

{% block body %}
    <h1>{{ sender_name }} {{ "recommends you to read"|trans }} "{{ article.title }}"</h1>
    <p>
        {{ "Read"|trans }} "{{ article.title }}" {{ "at"|trans }}
        <a href="{{ url('blog_show', { slug: article.slug }) }}">
            {{ url('blog_show', { slug: article.slug }) }}
        </a>
    </p>
    {% if sender_comments %}
        <h2>{{ sender_name }} {{ "comments"|trans }}:</h2>
        <p>{{ sender_comments }}</p>
    {% endif %}
{% endblock %}
