{% extends "base.html.twig" %}

{% form_theme form '@EWZRecaptcha/Form/ewz_recaptcha_widget.html.twig' %}

{% set pagetitle = 'Contact us'|trans({}, 'messages')%}
{% block title pagetitle %}

{% block body %}

    <section class="hero py-6 py-lg-7 text-white dark-overlay">
        <img class="bg-image" src="{{ asset('build/images/contact.jpg') }}" alt="{{'How can we help you today'|trans}}?">
        <div class="container overlay-content">
            <ol class="breadcrumb text-white justify-content-center no-border mb-0">
                <li class="breadcrumb-item">
                    <a href="{{ path('home') }}">{{'Home'|trans}}</a>
                </li>
                <li class="breadcrumb-item active">{{pagetitle}}</li>
            </ol>
            <h1 class="hero-heading">{{'How can we help you today'|trans}}?</h1>
        </div>
    </section>

	{% if settings["website_contact_email"] != "" or settings["website_contact_phone"] != "" or settings["website_contact_fax"] != "" or settings["website_contact_address"] != "" %}
		<section class="py-6">
			<div class="container">
				<div class="row">
					{% if settings["website_contact_address"] != "" %}
						<div class="col-md-4 text-center text-md-start mb-4 mb-md-0">
							<div class="icon-rounded mb-4 bg-primary-light">
								<svg class="svg-icon w-2rem h-2rem text-primary">
									<use xlink:href="#map-location-1"></use>
								</svg>
							</div>
							<h3 class="h5">{{ 'Address'|trans }}</h3>
							<p class="text-muted">
								{{ settings["website_contact_address"] | raw }}
							</p>
						</div>
					{% endif %}
					{% if settings["website_contact_phone"] != "" %}
						<div class="col-md-4 text-center text-md-start mb-4 mb-md-0">
							<div class="icon-rounded mb-4 bg-primary-light">
								<svg class="svg-icon w-2rem h-2rem text-primary">
									<use xlink:href="#landline-1"></use>
								</svg>
							</div>
							<h3 class="h5">{{ 'Call center'|trans }}</h3>
							<p class="text-muted">{{ ''|trans }}.</p>
							<p class="text-muted">
								<strong>{{ settings["website_contact_phone"] }}</strong>
							</p>
						</div>
					{% endif %}
					{% if settings["website_contact_email"] != "" %}
						<div class="col-md-4 text-center text-md-start mb-4 mb-md-0">
							<div class="icon-rounded mb-4 bg-primary-light">
								<svg class="svg-icon w-2rem h-2rem text-primary">
									<use xlink:href="#mail-1"></use>
								</svg>
							</div>
							<h3 class="h5">{{ 'Support'|trans }}</h3>
							<p class="text-muted">{{ 'Please feel free to write an email to us or to use our electronic ticketing system'|trans }}.</p>
							<ul class="list-unstyled text-muted">
								<li>{{ settings["website_contact_email"] }}</li>
								<li></li>
							</ul>
						</div>
					{% endif %}
				</div>
			</div>
		</section>
	{% endif %}

	<section class="py-6 bg-gray-100">
		<div class="container">
			<h2 class="h4 mb-5">{{ 'Contact form'|trans  }}</h2>
			<div class="row">
				<div class="col-md-7 mb-5 mb-md-0">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form'}}) }}
                        {{ form_errors(form) }}
                        {{ form_widget(form._token) }}
						<div class="controls">
							<div class="row">
								<div class="col-sm-6">
									<div class="mb-4">
										{{ form_row(form.fullname) }}
									</div>
								</div>
								<div class="col-sm-6">
									<div class="mb-4">
										{{ form_row(form.company) }}
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-6">
									<div class="mb-4">
										{{ form_row(form.email) }}
									</div>
								</div>
								<div class="col-sm-6">
									<div class="mb-4">
										{{ form_row(form.phone) }}
									</div>
								</div>
							</div>
							<div class="mb-4">
								{{ form_row(form.subject) }}
							</div>
							<div class="mb-4">
								{{ form_row(form.message) }}
							</div>
                            {% if setting.getSettings('google_recaptcha_enabled') == "1" %}
                                <div class="mb-4">
                                    {{ form_widget(form.recaptcha) }}
                                    {{ form_errors(form.recaptcha) }}
                                </div>
                            {% endif %}
							<button class="btn btn-outline-primary" type="submit">{{ 'Send message'|trans }}</button>
						</div>
					</form>
				</div>
				<div class="col-md-5">
					<div class="ps-lg-4 text-sm">
						<p class="text-muted">
							Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
						</p>
						<p class="text-muted">
							Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
						</p>
						<div class="social">
							{% include "global/social-link.html.twig" %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}
