{% extends "base.html.twig" %}

{% set pagetitle = 'Frequently asked questions'|trans %}
{% block title pagetitle %}

{% block breadcrumb %}
	{% set breadcrumb = [{ "current":(pagetitle) }] %}
	{% include "global/breadcrumb.html.twig" with breadcrumb %}
{% endblock %}

{% block body %}

	<section class="py-6">
		<div class="container">
			<div class="py-4">
				<h2 class="mb-5 text-primary">{{ 'F.A.Q.s'|trans }}</h2>
				<div class="row mb-7">
					<div class="col-lg-8 col-md-12 position-relative">
						{% if faqs | length > 0 %}
							<div class="accordion" id="accordionFAQ" role="tablist">
								{% for faq in faqs %}
									<div class="accordion-item py-4">
										<div class="d-flex justify-content-between align-items-center">
											<a href="#" class="fs-5 text-dark h4 collapsed" data-bs-toggle="collapse" data-bs-target="#collapse-{{ faq.id }}" aria-expanded="false" aria-controls="collapse-{{ faq.id }}">
												<i class="feather-icon icon-plus me-2 text-muted"></i>
												{{ faq.question }}
											</a>
										</div>
										<div id="collapse-{{ faq.id }}" class="accordion-collapse collapse" data-bs-parent="#accordionFAQ" style="">
											<div class="accordion-body fs-sm">{{ faq.answer | html_markdown }}</div>
										</div>
									</div>
								{% endfor %}
							</div>
						{% else %}
							{% include "global/message.html.twig" with { type: "info", message: ('No faqs found'|trans), icon: "fas fa-exclamation-circle" } %}
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}
