{% extends "base.html.twig" %}

{% set pagetitle = 'Frequently Asked Question'|trans %}
{% block title pagetitle %}

{% block breadcrumb %}
	{% set breadcrumb = [{ "current":(pagetitle) }] %}
	{% include "global/breadcrumb.html.twig" with breadcrumb %}
{% endblock %}

{% block body %}

	<section class="mb-lg-14 mb-8 mt-8">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div>
						<div class="mb-8">
							<h1 class="fw-bold mb-0">{{ pagetitle }}</h1>
							<p class="mb-0">{{ 'Already have an account? Click here to'|trans }}
								<a href="#!">{{ 'Sign in'|trans }}</a>.
                            </p>
						</div>
					</div>
				</div>
			</div>
			<div>
				<div class="row">
					<div class="col-lg-7 col-md-12">
						{% if faqs | length > 0 %}
							<div class="accordion accordion-flush" id="accordionFAQ">
								{% for faq in faqs %}
									<div class="accordion-item py-4">
										<div class="d-flex justify-content-between align-items-center">
											<a href="#" class="fs-5 text-inherit h4 collapsed" data-bs-toggle="collapse" data-bs-target="#collapse-{{ faq.id }}" aria-expanded="false" aria-controls="collapse-{{ faq.id }}">
												<i class="feather-icon icon-plus me-2 text-muted"></i>{{ faq.question }}
											</a>
										</div>
										<div id="collapse-{{ faq.id }}" class="accordion-collapse collapse" data-bs-parent="#accordionFAQ" style="">
											<div class="accordion-body fs-sm">{{ faq.answer | raw }}</div>
										</div>
									</div>
								{% endfor %}
							</div>
						{% else %}
							{% include "global/message.html.twig" with { type: "info", message: ('No faqs found'|trans), icon: "fas fa-exclamation-circle" } %}
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}
